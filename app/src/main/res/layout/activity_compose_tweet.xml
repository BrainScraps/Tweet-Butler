<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.codepath.apps.tweetbutler.ComposeTweet">

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_toRightOf="@+id/tvFullName"
        android:layout_toEndOf="@+id/tvFullName"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/tvFullName"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_alignLeft="@+id/etTweet"
        android:layout_alignStart="@+id/etTweet"
        android:layout_alignTop="@+id/ivProfile"
        android:gravity="center_vertical"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/twitter"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etTweet"
        android:hint="@string/tweet_hint"
        android:layout_below="@+id/tvScreenName"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
